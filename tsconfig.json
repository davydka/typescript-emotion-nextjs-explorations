{
  "compilerOptions": {
    "baseUrl": "./maps/src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es6", "es7", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "es5",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "types": ["react", "node", "googlemaps"]
  },
  "include": ["**/*.ts", "**/*.tsx", "index.d.ts"],
  "exclude": ["node_modules/**",
    "maps/dist"
  ]
}